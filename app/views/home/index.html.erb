<div class="row">
	<div class="col-md-12">
		<h3 class="text-center">
			Movie Review
		</h3>
	</div>
</div>

<div>
	<div class="row">
		<% @movies.each do |t| %>
			<div class="col-md-4">
				<div class="movie-tile">
					<h2 class="text-center text-primary">
						<%= t.name %>	
					</h2>
					<div class="row">
						<div class="col-md-5">
							Average Rating: 4.5 / 5
						</div>
						<div class="col-md-5 col-md-offset-2">
							Total Review Comments: 16
						</div>
						<div class="col-md-12 text-center">
							<a href="/movies/<%= t.id %>" class="btn btn-primary">
								Reviews & Ratings
							</a>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>

